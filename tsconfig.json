{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017","es6","dom"],
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "jest",
    "./src/**/__mocks__/",
    "./src/**/__tests__/",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts"
  ],
  "allowSyntheticDefaultImports": true,
  "esModuleInterop":true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}
